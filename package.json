{
  "name": "tanisoko",
  "private": true,
  "version": "2.0.0",
  "description": "Platform for building and running agro apps",
  "workspaces": [
    "frontend",
    "shared",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run tailwind:watch -w frontend\" \"npm run esbuild:watch:serve -w frontend\"",
    "esbuild:watch:serve": "npm run esbuild:watch:serve -w frontend",
    "tailwind:watch": "npm run tailwind:watch -w frontend",
    "tailwind:build": "npm run tailwind:build -w frontend",
    "clean": "rimraf build/frontend",
    "build:frontend": "npm run clean && npm run tailwind:build -w frontend && npm run esbuild:build -w frontend",
    "esbuild:build": "cross-env NODE_ENV=pre-release node frontend/esbuild.config.js",
    "deploy:github": "npm run build:frontend && gh-pages -d build/frontend",
    "build": "npm run build:frontend"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  }
}
